$('.cart-box-top').html("<%= j (render 'shared/cart_top', cart: session_cart) %>");
$('.cart-box').html("<%= j (render 'shared/cart_menu', cart: session_cart) %>");

<% unless session_cart.empty? %>
  $('.cart-items').html("<%= j (render 'shopping/cart/cart_items', cart_items: @cart_items) %>");
  $('.cart-summary').html("<%= j (render 'shopping/cart/summary', cart: session_cart) %>");
<% else %>
  $('.cart-items').hide();
  $('.cart-summary').hide();
<% end %>

ReactRailsUJS.mountComponents()

